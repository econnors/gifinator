<section class="page">
	<div id="userinfo">
		<div id="uinfoname">
			<br>
			<h2><%= @user.username %></h2>
			<br>
		</div>
		
		<div id="uinfophoto">
			<img src=" <%= ProfilePicture.find(@user.profile_picture_id).image_url %> " style="height: 300px; border-radius: 50%;"/>
		</div>
		
		<div id="uinfobio">
			<%= @user.bio %>
		</div>
		<div id="uinfoedit">
			<% if @user.id == session[:current_user_id]%>
			<%= link_to "Edit Your Info", edit_user_path %>
			<% end %>
			
			<% if @user.id == session[:current_user_id]%>
			<%= link_to "Delete My Account", user_path, method: :delete %>
			<% end %>
		</div>
	</div>
	<div id="showgif">
		<h2>Your Gifs</h2>
		<% @user.gifs.order(created_at: :desc).each do |gif| %>
		<div>
		<br>
		<%= link_to image_tag(gif.image_url), gif_path(gif.id), :class =>"gif" %>
		<br>
		Created on <%= gif.created_at.localtime.strftime("%I:%M%p on %m/%d/%Y") %>
		<br>
		<br>
		<h2>Tags:</h2> 
		<ul style="display: inline-block; width: 100%;">
			<li><% gif.tags.each do |tag| %> <%=link_to tag.name, tag_path(tag.id)%> 
				<% if @user.id == session[:current_user_id] %> <%= link_to image_tag("http://i.imgur.com/LacXCAu.png"), tag_path(tag.id), method: :delete%>
				<% end %> 
			</li>
			<% end %> 
		</ul>
		<br>
			<% if @user.id == session[:current_user_id] %> <br><%= link_to image_tag("http://i.imgur.com/xITs3kM.png"), gif_path(gif.id), method: :delete %> 
	    <% end %>
		</div>
		<p> ----------------------- </p>
		<% end %>

	</div>
	<div>
		<%= link_to image_tag("http://i.imgur.com/cwRoKkc.png"), new_gif_path %>
	</div>
</section>