<div class="useridpage">
	<div id="ueditinfo">
		<img src="<%= @gif.image_url %>" ><br>
		GifMe made by <%= link_to "#{User.find(@gif.user_id).username}", user_path(@gif.user_id) %>  ||  Created on <%= @gif.created_at.localtime.strftime("%I:%M%p on %m/%d/%Y") %><br> Tags: <% @gif.tags.each do |tag| %> <%=link_to tag.name, tag_path(tag.id)%> <% end %>
	</div>
	<h3>COMMENTS</h3>
	<div>
		<% @gif.comments.order(created_at: :desc).each do |comment| %>
		<br><%= comment.comment %>
		<%= link_to User.find(comment.user_id).username, user_path(comment.user_id) %>  || <%= comment.created_at.localtime.strftime("%I:%M%p on %m/%d/%Y") %><br>
		---------------------------------------------------------
		<% end %>
	</div>
</div>
